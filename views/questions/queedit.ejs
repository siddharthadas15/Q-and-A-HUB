<%- include("../partials/header")%>
<div class="container">
<h1 style="text-align:center">Edit Question</h1>

    <div style="width:50%;margin:35px auto;">
<form method="POST" action="/qanda/edit/<%=q._id%>" class="form-group" class="form-control">
    <div class="form-group">
    <input type="text" name="q[title]" placeholder="Title of Question" class="form-control" value="<%=q.title%>">
    </div>
    
    <div class="form-group">
    <textarea name="q[description]" placeholder="Description" class="form-control" rows="5"><%=q.description%></textarea>
    </div>
    <button class="btn btn-primary btn-lg btn-block" style="margin-top:10px">Edit</button>
   <a href="/qanda">Go Back</a>
   
</form>
 </div>
</div>
